<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bulky Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bulky_Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" />
</head>
<body class="flex h-[100vh] w-full flex-col overflow-y-auto bg-slate-50">
    <header class="z-[999] sticky top-0 min-h-[70px]">
        <nav class="black-ash-gradient flex h-full w-full items-center justify-between px-8 py-2">
            <div class="flex items-center justify-center gap-4">
                <div class="leading-3 flex h-full items-center justify-center font-bold text-white shadow-md">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index">BULKY WEB</a>
                </div>
                <div class="tracking-[2px] flex h-full items-center justify-center gap-3 font-semibold uppercase text-[12px]">
                    <a class="text-gray-400 transition-colors duration-200 hover:text-gray-100" asp-area="Customer" asp-controller="Home" asp-action="About">About</a>

                    <!--Drop down menu container-->
                    <div class="relative w-auto text-[12px]">

                        <!-- Dropdown button -->
                        <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown"
                         class="tracking-[2px] flex items-center justify-center gap-2 bg-transparent font-semibold uppercase text-gray-400 text-[12px] transition-colors duration-300 hover:text-gray-100" type="button">
                            <span>management</span>
                            <i class="fas fa-caret-down"></i>
                        </button>

                        <!-- Dropdown menu -->
                        <div id="dropdown" class="z-100 absolute left-0 top-full mt-2 hidden w-[200px] divide-y divide-gray-100 rounded-lg border border-gray-800 bg-gray-200 shadow-md shadow-gray-800">
                            <ul class="p-2 text-gray-800" aria-labelledby="dropdownDefaultButton">
                                <li class="flex w-full items-center justify-center hover:bg-gray-800">
                                    <a class="flex w-full items-center justify-center border-b border-b-gray-800 py-2 hover:text-gray-100" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                </li>
                            </ul>
                        </div>
                    </div>


                </div>
            </div>
            <div></div>
        </nav>
    </header>

    <main class="h-[calc(100%-70px)] w-full overflow-y-auto" >
        <partial name="_Notification" />
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
