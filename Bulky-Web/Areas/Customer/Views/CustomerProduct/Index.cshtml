@model Product

@{
	List<Product> products = ViewBag.Products as List<Product> ?? new List<Product>();
}


<div class="h-full w-full overflow-y-auto px-8 py-4 lg:px-12 xl:px-16">
	<div class="grid-cols-1 grid h-auto w-full gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
		@foreach(Product product in products)
		{
			<div class="flex w-full flex-col items-center justify-between gap-2 rounded-md border-t-[3px] border-t-gray-800 p-2 shadow-md hover:shadow-lg">
				<div class="flex w-full flex-col gap-1">
					<!--Product Image-->
					<div class="h-[200px] w-full rounded-md">
						<img src="@Url.Content($"~/{product.ImageUrl}")" action="" alt="Product Image" class="h-full w-full rounded-md object-cover" />
					</div>

					<!--Product Title-->
					<span class="w-full p-2 text-center font-semibold uppercase text-blue-900">@product.Title</span>

					<!--Product Author-->
					<div class="flex w-full items-center justify-center gap-1">
						<span class="text-yellow-400">By</span>
						<span class="text-yellow-600">@product.Author</span>
					</div>

					<!--Product ListPrice-->
					<div class="flex w-full items-center justify-center gap-1">
						<span class="">List price:</span>
						<span class="line-through">@product.ListPrice</span>
					</div>

					<!--Product 100+ Price-->
					<div class="flex w-full items-center justify-center gap-1">
						<span class="">As low as:</span>
						<span class="">@product.Price100</span>
					</div>
				</div>

				<!--Details Link-->
				<div class="flex h-auto w-full items-center justify-end">
					<a asp-area="Customer" asp-controller="CustomerProduct" asp-action="ViewProduct" asp-route-id="@product.Id" class="flex w-full items-center justify-center rounded-md bg-gray-800 py-2 uppercase text-white text-[11px] transition-colors duration-300 hover:bg-gray-400">view details</a>
				</div>
			</div>
		}
	</div>

</div>