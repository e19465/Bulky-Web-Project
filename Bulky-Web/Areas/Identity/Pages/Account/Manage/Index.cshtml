@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="flex h-full w-full items-center justify-center">
    <form id="profile-form" method="post" class="flex h-full w-full flex-col items-center justify-center rounded-md border border-gray-300 p-4 shadow-md sm:w-4/5 md:h-auto md:w-3/5">

        <h2 class="mb-4 text-lg font-semibold text-blue-900">Update Your Personal Info</h2>
        <hr />


        <!-- Username Field = (Email) / disabled -->
        <div class="mb-3 flex w-full flex-col gap-1">
            <input asp-for="Username" class="custom-form-input" placeholder="Please choose your username." disabled />
            <label asp-for="Username" class="custom-form-label">Username</label>
        </div>

        <!--Phone Number field-->
        <div class="mb-3 flex w-full flex-col gap-1">
            <input asp-for="Input.PhoneNumber" class="custom-form-input" id="update-prof-phone" placeholder="Please enter your phone number." />
            <label asp-for="Input.PhoneNumber" class="custom-form-label">Phone Number</label>
            <span asp-validation-for="Input.PhoneNumber" class="custom-form-error"></span>
        </div>

        <!-- Save Button -->
        <div class="w-full">
            <button id="login-submit" type="submit" class="black-ash-gradient custom-submit-button">Save</button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
