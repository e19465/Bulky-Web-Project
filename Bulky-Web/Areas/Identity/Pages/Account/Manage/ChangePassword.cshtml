@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />


<div class="flex h-full w-full items-center justify-center">
    <form id="email-form" method="post" class="flex h-full w-full flex-col items-center justify-center rounded-md border border-gray-300 p-4 shadow-md sm:w-4/5 md:h-auto md:w-3/5">

        <h2 class="mb-4 text-lg font-semibold text-blue-900">Update Your Password</h2>
        <hr />

        <!-- Enter current password -->
        <div class="mb-3 flex w-full flex-col gap-1">
            <input asp-for="Input.OldPassword" class="custom-form-input" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
            <label asp-for="Input.OldPassword" class="custom-form-label">Current Password</label>
            <span asp-validation-for="Input.OldPassword" class="custom-form-error"></span>
        </div>


        <!-- Enter new password -->
        <div class="mb-3 flex w-full flex-col gap-1">
            <input asp-for="Input.NewPassword" class="custom-form-input" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
            <label asp-for="Input.NewPassword" class="custom-form-label">New Password</label>
            <span asp-validation-for="Input.NewPassword" class="custom-form-error"></span>
        </div>

        
        <!-- Confirm new password -->
        <div class="mb-3 flex w-full flex-col gap-1">
            <input asp-for="Input.ConfirmPassword" class="custom-form-input" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
            <label asp-for="Input.ConfirmPassword" class="custom-form-label">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="custom-form-error"></span>
        </div>

        <!-- Submit button -->
        <div class="w-full">
            <button asp-page-handler="ChangeEmail" id="update-pw-button" type="submit" class="black-ash-gradient custom-submit-button">Save</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
